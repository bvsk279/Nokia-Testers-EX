{
    "author": "Venkata Siva Krishna Bellam",
    "manifest_version": 2,
    "name": "Nokia Testers Automation Tool",
    "description": "Experiance the New Normal while interacting with Reporting Portal, UTE Cloud and a lot more upcomming...",
    "version": "1.0",
    "icons": {
        "16": "icons/favicon-16.png",
        "32": "icons/favicon-32.png",
        "192": "icons/favicon-192.png",
        "512": "icons/favicon-512.png"
    },
    "browser_action":{
        "default_icon": "icons/favicon-32.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "webNavigation",
        "activeTab",
        "storage",
        "webRequest",
        "webRequestBlocking",
        "*://*.wroclaw.nsn-rdnet.net/*",
        "*://*.ute.nsn-rdnet.net/*",
        "*://www.zopamo.com/*",
        "https://cdnjs.cloudflare.com/*"
    ],
    "content_scripts": [
        {
            "css": ["fontawesome.min.css","content-includes/content-styles.css"],
            "matches": [
                "*://*.wroclaw.nsn-rdnet.net/*",
                "*://*.ute.nsn-rdnet.net/*"
            ],
            "run_at": "document_idle",
            "js": [
                "content-includes/jquery.js",
                "content-includes/functions.js",
                "content-includes/content-scripts/UTE_Cloud.js",
                "content-includes/content-scripts/RepPortal.js"
            ]
        }
    ],
    "background": {
        "persistent": true,
        "scripts": [
            "content-includes/jquery.js",
            "bg-includes/HandleCors.js",
            "bg-includes/background.js"
        ]
    }
}